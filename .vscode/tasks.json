{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "üöÄ Deploy Infrastructure",
            "type": "shell",
            "command": "chmod +x infrastructure/create-infrastructure.sh && ./infrastructure/create-infrastructure.sh",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "üì¶ Build Docker Images",
            "type": "shell",
            "command": "docker-compose build",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/docker"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "üîÑ Start Services",
            "type": "shell",
            "command": "docker-compose up -d",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/docker"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "‚èπÔ∏è Stop Services",
            "type": "shell",
            "command": "docker-compose down",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/docker"
            }
        },
        {
            "label": "üìä Check Status",
            "type": "shell",
            "command": "docker-compose ps",
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}/docker"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "üìã View Logs",
            "type": "shell",
            "command": "docker-compose logs -f",
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}/docker"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "üßπ Clean Up",
            "type": "shell",
            "command": "docker-compose down -v && docker system prune -f",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/docker"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "üîç AWS Status Check",
            "type": "shell",
            "command": "aws sts get-caller-identity && aws ec2 describe-instances --filters 'Name=tag:Name,Values=NextCloudDockerHost' --query 'Reservations[*].Instances[*].[InstanceId,State.Name,PublicIpAddress]' --output table",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
